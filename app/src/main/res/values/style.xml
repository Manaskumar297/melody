<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

        <item name="android:windowAnimationStyle">@style/FullScreenDialog</item>
    </style>
    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
        <item name="borderWidth">0dp</item>
        <item name="civ_border_color">@color/lll_blue</item>
    </style>


</resources>

